<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.authentication.detail.RegisterDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="6dp"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informasi*"
            android:textAppearance="@style/TextAppearance.Breel.TitleMedium"
            android:textStyle="bold" />

        <!--    Nama    -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Nama"
            android:textAppearance="@style/TextAppearance.Breel.LabelLarge" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Breel.TextField.OutlinedBox.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--    Posisi    -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Posisi"
            android:textAppearance="@style/TextAppearance.Breel.LabelLarge" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Breel.TextField.OutlinedBox.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Posisi" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--    Deskripsi    -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Deskripsi"
            android:textAppearance="@style/TextAppearance.Breel.LabelLarge" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Breel.TextField.OutlinedBox.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Deskripsi" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Pengalaman (Opsional)"
            android:textAppearance="@style/TextAppearance.Breel.TitleMedium"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.chip.ChipGroup
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <com.google.android.material.chip.Chip
                    style="@style/Widget.Breel.Chip.Filled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Figma" />
            </com.google.android.material.chip.ChipGroup>

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Breel.IconButton.Primary.Large"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:minWidth="0dp"
                android:padding="10dp"
                app:icon="@drawable/baseline_add_24"
                app:iconPadding="0dp" />

        </LinearLayout>

        <!--    Nama    -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
